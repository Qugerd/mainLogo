<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginVertical="16dp">
         
      <ImageView
          android:id="@+id/imageView"
          android:layout_width="112dp"
          android:layout_height="150dp"
          android:src="@drawable/jesus"
          android:background="@color/grey_2"

          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:layout_marginStart="16dp"

          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/imageView"
          app:layout_constraintTop_toTopOf="parent">

         <TextView
             android:id="@+id/tvName"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:text="Cady shirt dressCady shirt dress"
             android:fontFamily="@font/montserrat_regular"
             android:textSize="16dp"
             android:textColor="@color/black_2"

             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginTop="16dp"
             android:fontFamily="@font/montserrat_regular"
             android:text="Размер"
             android:textColor="#32302F"

             android:textSize="12dp"
             app:layout_constraintTop_toBottomOf="@+id/tvName"
             app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"

             android:layout_height="wrap_content"
             android:fontFamily="@font/montserrat_regular"
             android:text="Цвет"
             android:textColor="#32302F"
             android:textSize="12dp"
             app:layout_constraintTop_toBottomOf="@+id/textView2"
             app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"

             android:layout_height="wrap_content"
             android:fontFamily="@font/montserrat_regular"
             android:text="Бренд"
             android:textColor="#32302F"
             android:textSize="12dp"
             app:layout_constraintTop_toBottomOf="@+id/textView4"
             app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:fontFamily="@font/montserrat_regular"
             android:text="Категория"
             android:textColor="#32302F"
             android:textSize="12dp"
             app:layout_constraintTop_toBottomOf="@+id/textView5"
             app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/tvSize"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginStart="12dp"

             android:text="L (46-48)"
             android:fontFamily="@font/montserrat_regular"
             android:textSize="12dp"
             android:textColor="#32302F"

             app:layout_constraintStart_toEndOf="@+id/textView6"
             app:layout_constraintTop_toTopOf="@+id/textView2" />

         <TextView
             android:id="@+id/tvColor"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginStart="12dp"

             android:text="Белый"
             android:fontFamily="@font/montserrat_regular"
             android:textSize="12dp"
             android:textColor="#32302F"

             app:layout_constraintStart_toEndOf="@+id/textView6"
             app:layout_constraintTop_toBottomOf="@+id/tvSize" />

         <TextView
             android:id="@+id/tvBrend"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginStart="12dp"

             android:text="Max Mara Weekend"
             android:fontFamily="@font/montserrat_regular"
             android:textSize="12dp"
             android:textColor="#32302F"

             app:layout_constraintStart_toEndOf="@+id/textView6"
             app:layout_constraintTop_toBottomOf="@+id/tvColor" />

         <TextView
             android:id="@+id/tvCategory"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginStart="12dp"

             android:text="Одежда"
             android:fontFamily="@font/montserrat_regular"
             android:textSize="12dp"
             android:textColor="#32302F"

             app:layout_constraintStart_toEndOf="@+id/textView6"
             app:layout_constraintTop_toBottomOf="@+id/tvBrend" />

         <TextView
             android:id="@+id/tvPrice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginTop="12dp"

             android:text="208 000 ₽"
             android:fontFamily="@font/montserrat_semibold"
             android:textSize="16dp"
             android:textColor="@color/black_2"

             app:layout_constraintTop_toBottomOf="@+id/textView6"
             app:layout_constraintStart_toStartOf="parent"/>

         <TextView
             android:id="@+id/tvOldPrice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginStart="12dp"
             android:layout_marginTop="12dp"

             android:fontFamily="@font/montserrat_regular"
             android:text="156 000 ₽"
             android:textColor="#32302F"
             android:textSize="14dp"

             app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
             app:layout_constraintStart_toEndOf="@+id/tvPrice"
             app:layout_constraintTop_toBottomOf="@+id/textView6" />

         <TextView
             android:id="@+id/tvLast"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginTop="4dp"

             android:text="Последний товар"
             android:fontFamily="@font/montserrat_medium"
             android:textSize="12dp"
             android:textColor="#616575"
             android:drawableStart="@drawable/ic_last"
             android:drawablePadding="4dp"

             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tvOldPrice"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>